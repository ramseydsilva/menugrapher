div(class='panel panel-default dashboard-header')
    div(class='panel-body')
        ul(class='pager pull-left')
            li(class='previous')
                if back
                    a(id='back', href='#{back.href}') &larr; #{back.text}
                else
                    a(href='javascript:history.back()') &larr; 
                        span(class='hidden-xs') Go Back

        a(class="pull-right btn btn-success", href="/posts/new")
            i(class="fa fa-camera")
            span(class='hidden-xs') Upload Picture
        if user
            a(class="pull-right btn btn-warning", href="/profile")
                i(class="fa fa-user")
                span(class='hidden-xs') Profile
        a(class="pull-right btn btn-info", href="/")
            i(class="fa fa-home")
            span(class='hidden-xs') Home

if breadcrumbs
    ul(class="breadcrumb")
        for b in breadcrumbs
            if b.class == 'active'
                li(class=b.class)= b.text
            else
                li(class=b.class)
                    a(href=b.url)= b.text
