extends ../layout

block content
    div(class='panel panel-default', room='album-#{album._id}')
        div(class='panel-body', room='albums-user-#{album._user._id}')

            div(class='clearfix row-fluid')
                div(class='col-sm-3')
                    - title = { name: album._user.profile.name + "'s albums", url: '' }
                    - items = userAlbums
                    - id = 'userAlbums-' + album._user._id
                    include ../includes/leftmenu

                div(class='col-sm-9')
                    div(class='container-fluid')
                        div(class='row-fluid')
                            div(class='col-sm-12')
                                div.lead #{album.name}
                                    if album.userHasRights(user)
                                    div.pull-right
                                        a(class='btn btn-sm btn-warning', href=album.editUrl) Edit
                                        a(class='btn btn-sm btn-danger', href=album.deleteUrl) Delete
                        div(class='row-fluid')
                            div(class='col-sm-12')
                                - var item = album
                                include ../includes/credits

                        div(class='row-fluid')
                            div(class='col-sm-12')
                                - var cols = 3
                                - var posts = album.pics.reverse()
                                div#album-posts
                                - each post in posts
                                    include ../includes/post
