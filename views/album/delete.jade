extends ../layout

block content
    div(class='panel panel-default album', id='#{album._id}', room='album-#{album._id}')
        div(class='panel-body', room='albums-user-#{album._user._id}')

            div(class='clearfix row-fluid')

                div(class='col-sm-12')
                    div(class='container-fluid')
                        div(class='row-fluid')
                            div(class='col-sm-12')
                                legend.pull-left
                                    div.col-xs-6.col-xs-push-6
                                        if album.userHasRights(user)
                                            div.pull-right.text-right
                                                button(class='btn btn-sm btn-danger album-delete', deletePics='true') Delete Pics and Album
                                                button(class='btn btn-sm btn-warning album-delete', deletePics='false') Delete Only Album
                                                a(class='btn btn-sm btn-success', href=album.url) Done
                                                a(class='btn btn-sm btn-info', href=album.url) Cancel
                                    div.col-xs-6.col-xs-pull-6 Delete Album #{(!!album.name) ? ": " + album.name : ""}

                                - var cols = 3
                                - var posts = album.pics.reverse()
                                div#album-posts
                                - each post in posts
                                    include ../includes/postEdit
