extends ../layout

block content
    div(class='panel panel-default', room='post-new')
        div(class='panel-body')
            div(class='container-fluid')

                div.row-fluid
                    div(class='lead col-sm-10') 
                        | Upload Pictures
                    div(class='checkbox col-sm-2')
                        input(type='checkbox', checked=album, id='createAlbum')
                        input(type='hidden', id='album')
                        h4.no-padding.no-margin Create Album

                include ../includes/categorize

                div(class='row-fluid')
                    div(class='col-sm-5')
                        form(class='form-horizontal')
                            fieldset
                                p.lead From computer
                                input(id='image', type='file', name='image' multiple)


                    div(class='col-sm-1') &nbsp;
                    div(class='col-sm-6')
                        form(class='form-horizontal')
                            fieldset
                                p.lead From internet
                                input(type='text', class='image-url form-control', placeholder='Paste a url')

                div(class='clearfix padded row-fluid')
                    div(class='col-sm-12')
                        input(id='upload', type='submit', value='Upload', class='btn btn-warning')


                div(class='clearfix padded row-fluid')
                    div(id='uploads', class='row-fluid')
