extends ../layout

block content
    div(class='panel panel-default post' room='post-#{post.id}', id=post.id, url=post.url)
        div(class='panel-heading')
            block panel-heading
                span(class='post-title') #{post.title} &nbsp;
                if userHasRights
                    ul(class='list-inline pull-right')
                        li
                            a(class='' href=post.editUrl) Edit
                        li
                            a(class='text-danger' href=post.deleteUrl) Delete
        div(class='panel-body')
            p(class='text-primary') Uploaded by <a href='#{post.userUrl}'>#{post.user.name}</a> #{time}

            img(src=post.pic.originalUrl, width='100%')
            br
            br
            p(class='post-description')= post.description
