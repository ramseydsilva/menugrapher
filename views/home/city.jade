extends ../layout

block content
    div(class='panel panel-default')
        div(class='panel-body')
            div(class='container-fluid')
                div(class='row-fluid')
                    div(class='col-sm-3')
                        - var title = { name: 'Restaurants in ' + city.name, url: city.restaurantsUrl }
                        - var items = restaurants
                        include ../includes/leftmenu

                    div(class='col-sm-9')
                        p.lead Posts in #{city.name}
                        - var cols = 3
                        include ../includes/posts
