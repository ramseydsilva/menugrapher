extends ../layout

block content
    div(class='panel panel-default')
        div(class='panel-body')

            div(class='clearfix row-fluid', room='albums-user-#{currentUser.id}')
                div(class='col-sm-3')
                    - title = { name: 'Albums', url: '' }
                    - items = albums
                    - id = 'userAlbums-' + currentUser.id
                    include ../includes/leftmenu

                div(class='col-sm-9')
                    div(class='container-fluid')
                        div(class='row-fluid')
                            div(class='col-sm-12')
                                div.row
                                    legend.pull-left
                                        div.col-xs-6.col-xs-push-6
                                            if user && currentUser.id == user.id
                                                div.pull-right.text-right
                                                    a(class='btn btn-sm btn-warning', href='/account') Edit Profile
                                        div.col-xs-6.col-xs-pull-6= currentUser.profile.name

                                - var cols = 3
                                - each post in posts
                                    include ../includes/post
