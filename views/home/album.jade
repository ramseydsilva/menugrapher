extends ../layout

block content
    div(class='panel panel-default')
        div(class='panel-body')

            div(class='clearfix row-fluid')
                div(class='col-sm-3')
                    - title = { name: 'Other albums by user', url: '' }
                    - items = userAlbums
                    - id = 'userAlbums-' + album._user
                    include ../includes/leftmenu

                div(class='col-sm-9')
                    div(class='container-fluid')
                        div(class='row-fluid')
                            div(class='col-sm-12')
                                p.lead #{album.name}
                                - var cols = 3
                                - var posts = album.pics
                                include ../includes/posts
