extends ../layout

block content
    div(class='panel panel-default')
        div(class='panel-body post-container')
            div(class='container-fluid')

                div(class='row-fluid')
                    div(class='col-md-4')
                        p.lead Cities
                        for city in cities
                            a(href=city.url)= city.name
                            br

                    div(class='col-md-4')
                        p.lead Restaurants
                        for restaurant in restaurants
                            a(href=restaurant.url)= restaurant.name
                            br

                    div(class='col-md-4')
                        p.lead Categories
                        for category in categories
                            a(href=category.url)= category.name
                            br

                div(class='row-fluid')
                    div(class='col-md-6')
                        p.lead My uploads
                        - var cols = 6, posts = myPosts
                        include ../includes/posts

                    div(class='col-md-6')
                        p.lead Recent uploads
                        - var cols = 6, posts = recentPosts
                        include ../includes/posts
