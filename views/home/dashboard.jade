extends ../layout

block content
    div(class='panel panel-default')
        div(class='panel-body post-container')
            div(class='container-fluid')
                div(class='row-fluid')
                    div(class='col-md-6')
                        p.lead My uploads
                        - var cols = 6, posts = myPosts
                        include ../includes/posts

                    div(class='col-md-6')
                        p.lead Recent uploads
                        - var cols = 6, posts = recentPosts
                        include ../includes/posts
