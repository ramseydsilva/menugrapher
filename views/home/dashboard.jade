extends ../layout

block content
    div(class='panel panel-default')
        div(class='panel-body')
            div(class='container')
                div(class='row')
                    div(class='col-md-6')
                        p.lead My uploads
                        if myPosts
                            for post in myPosts
                                include ../includes/post
                    div(class='col-md-6')
                        p.lead Recent uploads
                        if recentPosts
                            for post in recentPosts
                                include ../includes/post
